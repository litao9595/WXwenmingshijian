/* pages/tuanduifengcai/detils.wxss */
.mian-box{
    background-color: #f5f5f5;
}
.banner-box{
    height: 600rpx;
}
.banner-box image{
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
}
.team-main{
    padding: 30rpx;
    margin-top: -200rpx;
}
.team-main .content-box{
    border-radius: 20rpx;
    -webkit-border-radius: 20rpx;
    -moz-border-radius: 20rpx;
    background: #fff;
    padding: 20rpx;
    margin-bottom: 20rpx;
}
.team-main .content-box .head-box{
    overflow: hidden;
}
.team-main .content-box .head-box .left{
    float: left;
    width: 200rpx;
    height: 200rpx;
}
.team-main .content-box .head-box .left image{
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
}
.team-main .content-box .head-box .right{
    float: right;
    width: calc(100% - 220rpx);
}
.team-main .content-box .head-box .right .head-title{
    font-size: 35rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    line-height: 40rpx;
    height: 40rpx;
    overflow: hidden;
}
.team-main .content-box .head-box .right .duration-txt{
    font-size: 30rpx;
    margin-top: 40rpx;
}
.team-main .content-box .text-txt{
    font-size: 30rpx;
    line-height: 50rpx;
}
.team-main .content-box .icon-title{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    -moz-justify-content: space-between;
    line-height: 40rpx;
}
.team-main .content-box .icon-title .left{
    font-size: 35rpx;
}
.team-main .content-box .icon-title .left image{
    display: block;
    float: left;
    height: 40rpx;
    width: 35rpx;
    margin-right: 10rpx;
}
.team-main .content-box .describe-txt{
    font-size: 30rpx;
    padding: 20rpx 0rpx;
}
.team-main .content-box .icon-title .right{
    font-size: 25rpx;
    color: #999999;
}
.team-main .content-box .icon-title .right image{
    float: right;
    width: 40rpx;
    height: 20rpx;
    margin-top: 10rpx;
}
.team-main .content-box .volunteer-list{
    padding: 20rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    -moz-justify-content: space-between;
}
.team-main .content-box .volunteer-list .left .avatar-box{
    float: left;
    width: 100rpx;
    height: 100rpx;
}
.team-main .content-box .volunteer-list .left .avatar-box image{
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}
.team-main .content-box .volunteer-list .left .user-name{
    float: left;
    font-size: 35rpx;
    line-height: 100rpx;
    margin-left: 20rpx;
}
.team-main .content-box .volunteer-list .right{
    font-size: 30rpx;
    line-height: 100rpx;
}
.team-main .content-box .volunteer-list .right text{
    color: #ff7070;
}
.join-us image{
    display: block;
    width: 100rpx;
    height: 100rpx;
    margin: 0 auto;
}
.join-us view{
    font-size: 25rpx;
    text-align: center;
}