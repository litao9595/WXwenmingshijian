/* pages/tuanduifengcai/index.wxss */
.list-box{
    ackground: #f5f5f5;
    padding: 30rpx;
    overflow: hidden;
}
.list-box .list-li{
    float: left;
    width: 330rpx;
    background: #fff;
    overflow: hidden;
    margin-bottom: 30rpx;
    border-radius: 20rpx;
    -webkit-border-radius: 20rpx;
    -moz-border-radius: 20rpx;
    box-shadow: 0rpx 0rpx 10rpx #ccc;
    -webkit-box-shadow: 0rpx 0rpx 10rpx #ccc;
    -moz-box-shadow: 0rpx 0rpx 10rpx #ccc;
}
.list-box .list-li:nth-child(2n){
    float: right;
}
.list-box .list-li .cover-img{
    height: 200rpx;
}
.list-box .list-li .cover-img image{
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
}
.list-box .list-li .list-txt-box{
    padding: 20rpx;
}
.list-box .list-li .list-txt-box .team-txt{
    font-size: 35rpx;
    text-align: center;
    overflow: hidden;
    height: 40rpx;
    line-height: 40rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.list-box .list-li .list-txt-box .location-box{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-justify-content: center;
    -moz-justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-align-items: center;
    -moz-align-items: center;
    margin-top: 20rpx;
}
.list-box .list-li .list-txt-box .location-box .left{
    width: 30rpx;
    height: 40rpx;
}
.list-box .list-li .list-txt-box .location-box .right{
    font-size: 25rpx;
    color: #ccc;
    margin-left: 10rpx;
}