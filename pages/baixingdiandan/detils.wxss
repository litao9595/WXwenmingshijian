/* pages/baixingdiandan/detils.wxss */
.diangdan-main{
    padding: 30rpx;
    background-color: #f5f5f5;
}
.diangdan-main .diangdan-top{
    background: #fff;
    border-radius: 20rpx;
    -webkit-border-radius: 20rpx;
    -moz-border-radius: 20rpx;
}
.diangdan-main .diangdan-top .img-box{
    height: 400rpx;
}
.diangdan-main .diangdan-top .img-box image{
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.diangdan-main .diangdan-top .txt-box{
    padding: 20rpx;
}
.diangdan-main .diangdan-top .txt-box .title-box{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-align-items: center;
    -moz-align-items: center;
    margin-bottom: 20rpx;
}
.diangdan-main .diangdan-top .txt-box .title-box .left{
    font-size: 35rpx;
    margin-right: 30rpx;
}
.diangdan-main .diangdan-top .txt-box .title-box .right{
    font-size: 20rpx;
    color: #999;
}
.diangdan-main .diangdan-top .txt-box .title-box .right .icon-box{
    background: #f5f5f5;
    border-radius: 20rpx;
    -webkit-border-radius: 20rpx;
    -moz-border-radius: 20rpx;
    line-height: 30rpx;
    height: 30rpx;
    padding: 0rpx 20rpx;
}
.diangdan-main .diangdan-top .txt-box .title-box .right image{
    float: left;
    width: 20rpx;
    height: 20rpx;
}
.diangdan-main .diangdan-top .txt-box .title-box .right text{
    float: left;
    margin-left: 10rpx;
}
.diangdan-main .diangdan-top .text-box{
    font-size: 30rpx;
    line-height: 50rpx;
}
.diangdan-main .diangdan-bottom{
    background: #fff;
    margin: 30rpx 0rpx;
    padding: 20rpx;
    border-radius: 20rpx;
    -webkit-border-radius: 20rpx;
    -moz-border-radius: 20rpx;
}
.diangdan-main .diangdan-bottom .title{
    font-size: 35rpx;
}
.diangdan-main .diangdan-bottom .text{
    font-size: 30rpx;
}
.submit-btn{
    background: #ff7070;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    font-size: 35rpx;
    border-radius: 40rpx;
    -webkit-border-radius: 40rpx;
    -moz-border-radius: 40rpx;
}