/* pages/tuanduishengqing/index.wxss */
.main-box{
    background: #f5f5f5;
}
.banner-box{
    width: 100%;
    height: 400rpx;
}
.banner-box image{
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.content-box{
    padding: 30rpx;
    margin-top: -100rpx;
}
.content-box .serch-box{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    -moz-justify-content: space-between;
    padding: 20rpx;
    background: #fff;
    border-radius: 20rpx;
    -webkit-border-radius: 20rpx;
    -moz-border-radius: 20rpx;
}
.content-box .serch-box .left{
    width: 550rpx;
    height: 60rpx;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    background-color: #f5f5f5;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}
.content-box .serch-box .left image{
    display: block;
    float: left;
    width: 40rpx;
    height: 40rpx;
    margin: 10rpx;
}
.content-box .serch-box .left input{
    display: block;
    float: left;
    width: calc(100% - 60rpx);
    height: 100%;
    font-size: 30rpx;
}
.content-box .serch-box .right{
    font-size: 30rpx;
    background: #ff7070;
    color: #fff;
    line-height: 60rpx;
    padding: 0rem 20rpx;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
}
.content-box .team-box{
    margin-top: 50rpx;
}
.content-box .team-box .team-list{
    padding: 20rpx;
    background: #fff;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    box-shadow: 0rpx 0rpx 10rpx #ccc;
    -webkit-box-shadow: 0rpx 0rpx 10rpx #ccc;
    -moz-box-shadow: 0rpx 0rpx 10rpx #ccc;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    -moz-justify-content: space-between;
    margin-bottom: 30rpx;
}
.content-box .team-box .team-list .left{
    width: 200rpx;
    height: 200rpx;
}
.content-box .team-box .team-list .left image{
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.content-box .team-box .team-list .right{
    width: calc(100% - 220rpx);
}
.content-box .team-box .team-list .right .title{
    font-size: 35rpx;
    height: 40rpx;
    line-height: 40rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    margin-bottom: 20rpx;
    padding-top: 10rpx;
}
.content-box .team-box .team-list .right .team-txt{
    font-size: 30rpx;
    color: #666;
    line-height: 40rpx;
}
.add-team{
    position: fixed;
    right: 50rpx;
    top: 50rpx;
    z-index: 10;
    font-size: 30rpx;
    line-height: 50rpx;
    background: #ccc;
    color: #fff;
    padding: 0rpx 10rpx;
    border-radius: 30rpx;
    -webkit-border-radius: 30rpx;
    -moz-border-radius: 30rpx;
    overflow: hidden;
}
.add-team image{
    display: block;
    width: 30rpx;
    height: 30rpx;
    float: left;
    margin-top: 10rpx;
}
.add-team view{
    float: left;
}