/* pages/zhiyuanhuodong/index.wxss */
.mian-box{
    padding: 30rpx;
}
.add-btn{
    font-size: 30rpx;
    text-align: right;
    padding-right: 30rpx;
}
.serch-box{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    -moz-justify-content: space-between;
    padding: 20rpx;
    background: #fff;
    border-radius: 20rpx;
    -webkit-border-radius: 20rpx;
    -moz-border-radius: 20rpx;
}
.serch-box .left{
    width: 500rpx;
    height: 60rpx;
    background-color: #f5f5f5;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}
.serch-box .left image{
    width: 40rpx;
    height: 40rpx;
    float: left;
    margin: 10rpx;
}
.serch-box .left input{
    float: left;
    display: block;
    width: calc(100% - 60rpx);
    height: 100%;
    border: none;
    padding: 0rpx;
    font-size: 30rpx;
    background: none;
    outline: none;
}
.serch-box .right{
    font-size: 30rpx;
    background: #ff7070;
    color: #fff;
    line-height: 60rpx;
    padding: 0rpx 20rpx;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
}
.whole-box{
    overflow: hidden;
    padding: 30rpx 0rpx;
    border-bottom: solid 1px #f5f5f5;
}
.whole-box .left{
    float: left;
    font-size: 30rpx;
    line-height: 40rpx;
}
.whole-box .content-txt{
    float: left;
    font-size: 30rpx;
    line-height: 40rpx;
    margin-left: 20rpx;
    width: 500rpx;
    height: 40rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.whole-box .right{
    float: right;
    width: 40rpx;
    height: 40rpx;
}
.whole-box .right image{
    display: block;
    width: 100%;
    height: 100%;
}
.screen-box{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    -moz-justify-content: space-between;
    line-height: 60rpx;
    font-size: 30rpx;
    border-bottom: solid 10rpx #f5f5f5;
    padding-bottom: 30rpx;
}
.screen-box .state-box{
    padding: 0rpx 30rpx 0rpx 30rpx;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    background: #f5f5f5;
    width: 250rpx;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 60rpx;
    height: 60rpx;
}
.screen-box .state-box text{
    float: left;
}
.screen-box .state-box image{
    float: right;
    width: 30rpx;
    height: 30rpx;
    margin-top: 15rpx;
}
.screen-box .empty-box{
    padding: 0rpx 30rpx;
    background: #f5f5f5;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
}
.list-box{
    border-bottom: 10rpx solid rgb(245, 245, 245);
    padding: 50rpx 50rpx;
}
.list-box .title-box{
    font-size: 35rpx;
    line-height: 40rpx;
    margin-bottom: 25rpx;
}
.list-box .title-box text{
    font-size: 25rpx;
    margin-left: 30rpx;
    background: #ecf2ff;
    color: #566eff;
    padding: 5rpx 20rpx;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
}
.list-box .text-box{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    font-size: 30rpx;
    line-height: 40rpx;
    margin-top: 10rpx;
}
.list-box .text-box .left{
    width: 150rpx;
}
.list-box .text-box .right{
    width: calc(100% - 150rpx);
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    height: 40rpx;
}
.list-box .text-box .right text{
    color: #f75959;
}
.list-box .text-box-2{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    font-size: 30rpx;
    line-height: 40rpx;
    margin-top: 10rpx;
}
.list-box .text-box-2 .left{
    width: 230rpx;
}
.list-box .text-box-2 .right{
    width: calc(100% - 230rpx);
}
.list-box .text-box-2 .right text{
    color: #f75959;
}