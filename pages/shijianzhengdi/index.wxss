/* pages/shijianzhengdi/index.wxss */
.mian-box{
    position: fixed;
    width: 100%;
    height: 100%;
    overflow: hidden;
    left: 0rpx;
    top: 0rpx;
}
.mian-box .map-box{
    height: 800rpx;
    background-color: #f5f5f5;
}
.mian-box .zhengdi-main{
    padding: 50rpx 30rpx;
    height: calc(100% - 800rpx);
    overflow: hidden;
    overflow-y: auto;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}
.mian-box .zhengdi-main .serch-box{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    -moz-justify-content: space-between;
}
.mian-box .zhengdi-main .serch-box .left{
    width: 500rpx;
    background: #f5f5f5;
    border-radius: 30rpx;
}
.mian-box .zhengdi-main .serch-box .left image{
    float: left;
    width: 40rpx;
    height: 40rpx;
    margin: 15rpx 10rpx;
}
.mian-box .zhengdi-main .serch-box .left input{
    float: left;
    background: none;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    border: none;
    outline: none;
    width: calc(100% - 60rpx);
    height: 70rpx;
    font-size: 30rpx;
}
.mian-box .zhengdi-main .serch-box .right{
    width: 100rpx;
    line-height: 70rpx;
    background: #ff7070;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    border-radius: 10rpx;
}
.mian-box .zhengdi-main .list-box{
    padding: 20rpx 0rpx;
    border-bottom: solid 1rpx #999999;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -moz-flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    -moz-justify-content: space-between;
}
.mian-box .zhengdi-main .list-box .left .txt-1{
    font-size: 35rpx;
    line-height: 50rpx;
}
.mian-box .zhengdi-main .list-box .left .txt-2{
    font-size: 25rpx;
    margin-top: 10rpx;
}
.mian-box .zhengdi-main .list-box .right{
    font-size: 25rpx;
}
.mian-box .zhengdi-main .list-box .right image{
    width: 50rpx;
    height: 50rpx;
}