/* compoments/multipleChoice/multipleChoice.wxss */
.selct-mian{
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0rpx;
    top:0rpx;
    background-color: rgba(0,0,0,.5);
    z-index: 11;
}
.selct-mian .selct-contnet{
    position: absolute;
    width: 100%;
    left: 0rpx;
    bottom: 0rpx;
    box-sizing: border-box;
    background-color: #fff;
}
.selct-mian .selct-contnet .selct-head{
    display: flex;
    justify-content: space-between;
    font-size: 40rpx;
    line-height: 80rpx;
    border-bottom: solid 1px #ccc;
    padding: 0rpx 30rpx;
}
.selct-mian .selct-contnet .selct-head .cancel{
    color: #ccc;
}
.selct-mian .selct-contnet .selct-head .confirm{
    color: #07c160;
}
.selct-mian .selct-contnet .list-ul{
    padding: 30rpx;
    overflow: hidden;
}
.selct-mian .selct-contnet .list-ul view{
    float: left;
    font-size: 25rpx;
    width: 200rpx;
    line-height: 60rpx;
    border: solid 1px #ccc;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    color: #ccc;
    text-align: center;
    margin-right: 35rpx;
    margin-bottom: 35rpx;
}
.selct-mian .selct-contnet .list-ul view:nth-child(3n){
    margin-right: 0rpx;
}
.selct-mian .selct-contnet .list-ul .active{
    color: #fff;
    background: #ff7070;
}